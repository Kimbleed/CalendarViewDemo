<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/title_text_color_grey1"
        android:textSize="12dp" />

    <View
        android:id="@+id/view_choose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/tv_way"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_circle_alpha" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_way"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="123"
        android:paddingBottom="3dp"
        android:textColor="#444444"
        android:textSize="14dp" />


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_date"
        android:layout_marginTop="5dp"
        >
        <View
            android:id="@+id/view_flag_1"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/drawable_circle_green"
            android:layout_marginRight="2dp"/>

        <View
            android:id="@+id/view_flag_2"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/drawable_circle_red" />

    </LinearLayout>
</RelativeLayout>